generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  created
  paid
  failed
  cancelled
  shipped
}

model User {
  id     String  @id @default(uuid())
  name   String
  email  String  @unique
  orders Order[]
}

model Product {
  id             String      @id @default(uuid())
  name           String
  price          Float
  stock_quantity Int
  orderItems     OrderItem[]
}

model Order {
  id           String      @id @default(uuid())
  user_id      String
  total_amount Float
  status       OrderStatus @default(created)
  created_at   DateTime    @default(now())

  user  User        @relation(fields: [user_id], references: [id])
  items OrderItem[]
}

model OrderItem {
  id         String @id @default(uuid())
  order_id   String
  product_id String
  quantity   Int
  unit_price Float

  order   Order   @relation(fields: [order_id], references: [id])
  product Product @relation(fields: [product_id], references: [id])
}
